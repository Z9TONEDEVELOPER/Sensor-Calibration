<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CalibrationApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="CalibrationApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="CalibrationApp">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="Auto,*" Margin="10">
        <!-- Menu -->
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Загрузить данные" Click="UploadData"/>
                <MenuItem Header="_Выход" />
            </MenuItem>
            <MenuItem Header="_Правка">
                
            </MenuItem>
            <MenuItem Header="_Экспорт">
                
            </MenuItem>
            <MenuItem Header="_Вид">
                
            </MenuItem>
            <MenuItem Header="_Справка">
                
            </MenuItem>
        </Menu>
        
        <!-- Left Panel with ScrollViewer -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,10,0,0">
            <StackPanel Spacing="5" >
                <Button Click="UploadData" Padding="10" Margin="2">Загрузить данные</Button>
                
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        BoxShadow="5 5 10 0 DarkGray"
                        Padding="0" Margin="0">
                    <StackPanel Margin="2">
                        <TextBlock Padding="2" FontWeight="ExtraBold">Параметры обработки</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Margin="6">Окно сглаживания</TextBlock>
                            <NumericUpDown Value="10" />
                        </StackPanel>  
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Margin="6">Параметры LOWESS</TextBlock>
                            <NumericUpDown Value="0.5" Increment="0.05" FormatString="0.00" Minimum="0.05" Maximum="1"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Margin="6">Порог выбросов</TextBlock>
                            <NumericUpDown Value="1" Increment="1" FormatString="0.00"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Margin="6">Метод выбросов</TextBlock>
                            <ComboBox>
                                <ComboBoxItem>z-score</ComboBoxItem><!--данные методы будут добавляться по мере разработки математической модели-->
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Margin="6">Тип фильтра</TextBlock>
                            <ComboBox >
                                <ComboBoxItem>butter</ComboBoxItem><!--mvp приложение будет насчитывать только 4 фильтра-->
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        BoxShadow="5 5 10 0 DarkGray"
                        Padding="0" Margin="0">
                    <StackPanel Margin="2">
                        <TextBlock Padding="2" FontWeight="ExtraBold">Калибровка</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Padding="5">Выбор сенсора</TextBlock>
                            <ComboBox>
                                <ComboBoxItem>0</ComboBoxItem> <!--добавляться автоматически из кода при чтении файла с данными(сырыми)-->
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Padding="5">Метод калибровки</TextBlock>
                            <ComboBox>
                                <ComboBoxItem>Median</ComboBoxItem> <!--данные методы будут добавляться по мере разработки математической модели-->
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        BoxShadow="5 5 10 0 DarkGray"
                        Padding="0" Margin="0">
                    <StackPanel Margin="2">
                        <TextBlock Padding="2" FontWeight="ExtraBold">Информация о данных</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBox Padding="2" Width="200" Height="100" IsReadOnly="True">
                                Данные не загружены
                            </TextBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <Border Background="Gainsboro"
                        BorderBrush="Black"
                        BorderThickness="2"
                        CornerRadius="3"
                        BoxShadow="5 5 10 0 DarkGray"
                        Padding="0" Margin="0">
                    <StackPanel Margin="2">
                        <TextBlock Padding="2" FontWeight="ExtraBold">Действия</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Button Padding="10" Margin="2">Сохранить</Button>
                            <Button Padding="10" Margin="2">Экспортировать</Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <Button Padding="10" Margin="2">Поиск аномалий</Button>
                            <Button Padding="10" Margin="2">Сброс параметров</Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- GridSplitter -->
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" Background="LightGray" Cursor="SizeWestEast"/>
        
        <!-- Right Panel with TabControl -->
        <TabControl Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
            <TabItem Header="Графики">
                <StackPanel >
                    <TextBlock>Содержание первой вкладки</TextBlock>
                </StackPanel>
            </TabItem>
            <TabItem Header="Статистика">
                <StackPanel >
                    <TextBlock>Содержание второй вкладки</TextBlock>
                </StackPanel>
            </TabItem>
            <TabItem Header="Сравнение">
                <StackPanel >
                    <TextBlock>Содержание третьей вкладки</TextBlock>
                </StackPanel>
            </TabItem>
            <TabItem Header="3D Визуализация">
                <StackPanel >
                    <TextBlock>Содержание четвертой вкладки</TextBlock>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window> 